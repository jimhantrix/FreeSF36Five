
<h2 class="text-center row">


   <section>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="product_single">



            <h1>Create a New category:</h1>

            <%= form_tag '/categories', method: :post do %>

              <div>
                <%= label_tag :title %>
                <%= text_field_tag :title %>
              </div>
              
              <div>

              
                <%= label_tag :category_id, nil, id: "black-color" %>
                
                <%= collection_select :category_id, :id, Category.all.order('category ASC'), :id, :category, class: "form-control" %>
              

                    <%= text_field_tag :category_id %>


              </div>



               <div>
                <%= label_tag :description %>
                <%= text_field_tag :description %>
              </div>


              <%= submit_tag "Category created" %>
            <% end %>


          </div>
        </div>
      </div>
    </section>










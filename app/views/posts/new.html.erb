<h2 class="text-center row">


   <section>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="product_single">
            <h1>Create a new nerdy product:</h1>

            <%= form_tag '/products', method: :post do %>

              <div>
                <%= label_tag :title %>
                <%= text_field_tag :title %>
              </div>
              
              <div>
                <%= label_tag :category %>
                <%= text_field_tag :category %>
              </div>
               <div>
                <%= label_tag :description %>
                <%= text_field_tag :description %>
              </div>
              
              <div>
                <%= label_tag :image %>
                <%= text_field_tag :image %>
              </div>
              
             

              <%= submit_tag "Create Post" %>
            <% end %>
          </div>
        </div>
      </div>
    </section>

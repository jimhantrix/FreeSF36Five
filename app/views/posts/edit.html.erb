
<h2 class="text-center row">


  <section>
    <div class="row">

      <div class="col-sm-8 col-sm-offset-2">


        <div class="product_single">

          <h1 class="jumbotron hero-spacer">Update Post</h1>

            <%= form_tag '/posts', method: :post do %>

          <div>
   
            </div>
              
            <div>

              
              <%= label_tag :category_id, nil, id: "black-color" %>
              
              <%= collection_select :category_id, :id,


               Category.all.order('category ASC'), :id, :category, class: "form-control" %>
          
            </div>

              <div>
                <%= label_tag :description %>
                <%= text_field_tag :description, @post.description %>
                <div>
                <%=label_tag :title %>
                <%=text_field_tag :title %>
                <%=form_tag "/posts/#{@post.id}",   multipart: true, method: :post do %>
                <%=file_field_tag :avatar %>
                <% end %>      
                </div>
              </div>

              
              <%= submit_tag "Create Post" %>
            <% end %>
        </div>
      </div>
    </div>
  </section>
